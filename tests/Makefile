CFLAGS = -std=c23 -Wall -Wextra -Wpedantic -O2 -g
LDFLAGS = -lxxhash

# Source files
HT_SRC = ht.c
HT_HDR = ht.h
TEST_SRC = ht_test.c

# Targets
.PHONY: all clean test

all: ht_test

ht_test: $(TEST_SRC) $(HT_SRC) $(HT_HDR)
	$(CC) $(CFLAGS) -DSHT_DOXYGEN -o $@ $(TEST_SRC) $(HT_SRC) $(LDFLAGS)

test: ht_test
	./ht_test

clean:
	rm -f ht_test
