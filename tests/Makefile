# Uncomment one compiler option - gcc or clang
CC = gcc
#CC = clang
CFLAGS = -std=c23 -Wall -Wextra -Wcast-qual -O2 -g
LDFLAGS = -lxxhash

# Source files
SHT_SRC = ../src/sht.c
SHT_HDR = ../src/sht.h
TEST_SRC = sht_test.c

# Targets
.PHONY: all clean test

all: sht_test

sht_test: $(TEST_SRC) $(SHT_SRC) $(SHT_HDR)
	$(CC) $(CFLAGS) -o $@ $(TEST_SRC) $(SHT_SRC) $(LDFLAGS)

test: sht_test
	./sht_test

clean:
	rm -f sht_test
